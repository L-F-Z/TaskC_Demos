FROM python:3.9-slim-buster

WORKDIR /app

RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libegl1-mesa \
    libxrandr2 \
    libxss1 \
    libxcursor1 \
    libxcomposite1 \
    libasound2 \
    libxi6 \
    libxtst6 \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    torch \
    torchvision \
    torchaudio \
    ftfy \
    regex \
    tqdm

WORKDIR /app/CLIP  
COPY ./CLIP /app/CLIP  

RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir .  

# COPY . /app
# CMD ["python", "example.py"]
CMD ["/bin/bash"]