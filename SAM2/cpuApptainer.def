Bootstrap: docker  
From: 192.168.2.25:10081/python:3.10-slim 

# Set working directory and copy files
%setup  
    mkdir -p ${APPTAINER_ROOTFS}/app/sam2
    cp -r ./sam2/* ${APPTAINER_ROOTFS}/app/sam2/

%environment  
    export DEBIAN_FRONTEND=noninteractive  
    export PATH="${PATH}:/home/user/.local/bin"  

%post  
    echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections

    total_lines=$(wc -l < /etc/apt/sources.list.d/debian.sources) && \
    lines_to_keep=$((total_lines - 6)) && \
    head -n $lines_to_keep /etc/apt/sources.list.d/debian.sources > /etc/apt/sources.list.d/debian.sources.new; sed -i 's|http://deb.debian.org/debian|http://192.168.2.25:9081/repository/debian/|g' /etc/apt/sources.list.d/debian.sources.new; mv /etc/apt/sources.list.d/debian.sources.new /etc/apt/sources.list.d/debian.sources

    apt-get update && apt-get install -y apt-transport-https ca-certificates  
    # apt-get install -y git vim tmux nano htop sudo curl wget gnupg2  
    apt-get update && apt-get install -y --no-install-recommends \
        ffmpeg \
        libavutil-dev \
        libavcodec-dev \
        libavformat-dev \
        libswscale-dev \
        pkg-config \
        build-essential \
        libffi-dev \
        curl
        # git \
    
    mkdir ~/.pip/; test -f ~/.pip/pip.conf && \
    mv ~/.pip/pip.conf ~/.pip/pip.conf.bak; curl -s -o ~/.pip/pip.conf -m 3 http://192.168.2.25:4000/root/staging/raw/branch/main/pip.conf

    cd ${APPTAINER_ROOTFS}/app/sam2 && \
    pip install --upgrade pip setuptools && \
    pip install -e ".[interactive-demo]" && \
    pip install opencv-python

    curl -o ${APPTAINER_ROOTFS}/app/sam2/checkpoints/sam2.1_hiera_tiny.pt http://192.168.2.25:9081/repository/storage/sam2.1_hiera_tiny.pt
    curl -o ${APPTAINER_ROOTFS}/app/sam2/checkpoints/sam2.1_hiera_small.pt http://192.168.2.25:9081/repository/storage/sam2.1_hiera_small.pt
    curl -o ${APPTAINER_ROOTFS}/app/sam2/checkpoints/sam2.1_hiera_base_plus.pt http://192.168.2.25:9081/repository/storage/sam2.1_hiera_base_plus.pt
    curl -o ${APPTAINER_ROOTFS}/app/sam2/checkpoints/sam2.1_hiera_large.pt http://192.168.2.25:9081/repository/storage/sam2.1_hiera_large.pt

%startscript  
    exec /bin/bash  

%runscript  
    exec /bin/bash